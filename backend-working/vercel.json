{
  "version": 2,
  "builds": [
    { "src": "api/*.js", "use": "@vercel/node" }
  ],
  "routes": [
    { "src": "/api/health", "dest": "/api/health.js" },
    { "src": "/api/product(?:/(.*))?", "dest": "/api/product.js" },
    { "src": "/api/user(?:/(.*))?", "dest": "/api/user.js" },
    { "src": "/api/order(?:/(.*))?", "dest": "/api/order.js" },
    { "src": "/api/cart(?:/(.*))?", "dest": "/api/cart.js" },
    { "src": "/api/(.*)", "dest": "/api/$1.js" }
  ]
}
